<?xml version="1.0" encoding="utf-8"?>
<!-- Main layout for the game's start screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".savetheblock.savetheblockActivity"
    android:orientation="vertical"
    android:background="#e7dfC2"
    android:gravity="center">

    <!-- Game title image displayed at the top -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="261dp"
        app:srcCompat="@drawable/game_title_id7" />

    <!-- Character image shown below title -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/chara_id7" />

    <!-- Start button to begin the game -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#BB8044"
        android:layout_marginBottom="10dp"
        android:onClick="startGame" />

    <ImageButton
        android:id="@+id/tohighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/highscore"/>

</LinearLayout>